* text=auto

# Force LF (Unix) in fontes e configs
*.java text eol=lf
*.kt   text eol=lf
*.js   text eol=lf
*.ts   text eol=lf
*.css  text eol=lf
*.html text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.properties text eol=lf
*.sql  text eol=lf
*.md   text eol=lf
*.sh   text eol=lf

# Manter CRLF em scripts Windows
*.bat  text eol=crlf
*.cmd  text eol=crlf
